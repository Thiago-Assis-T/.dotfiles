[Unit]
Description=Super simple wallpaper application for Wayland compositors implementing the layer-shell protocol.
Documentation=https://codeberg.org/dnkl/wbg/
PartOf=graphical-session.target
After=graphical-session.target
Requisite=graphical-session.target

[Service]
ExecStart=/usr/bin/wbg /home/thiago/Pictures/wallpaper.png
ExecReload=kill -SIGUSR2 $MAINPID
Restart=on-failure

[Install]
WantedBy=graphical-session.target
